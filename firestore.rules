rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Users Collection ---
    // Anyone can read basic user profile info (for search).
    // Each user can only write their own profile document.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- Global Collection (Insights, etc.) ---
    match /global/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // --- User Data Subcollections ---
    
    // Public Profile Rule: Allow reading 'aether' doc if profile.isPublic is true
    match /users/{userId}/data/aether {
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        resource.data.profile.isPublic == true
      );
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default rule for other user subcollections (private)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- Foods Collection ---
    // This is a global health/nutrition database. 
    // - Anyone can read/search food data (public).
    // - Only authenticated users can contribute (create/update) food data.
    // - Deletion is disabled for now to prevent data loss.
    match /foods/{foodId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if false; 
    }

    // --- Guilds Collection ---
    match /guilds/{guildId} {
      // Any authenticated user can browse/read guilds
      allow read: if request.auth != null;
      
      // Any authenticated user can create a guild
      allow create: if request.auth != null;
      
      // Updates: Leader can change anything.
      // Non-leaders can ONLY modify memberIds (join/leave).
      allow update: if request.auth != null
        && (
          // Leader can update anything
          request.auth.uid == resource.data.leaderId
          // Non-leaders can only join (add themselves) or leave (remove themselves)
          || (
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['memberIds'])
          )
        );
      
      // Only the guild leader can delete the guild
      allow delete: if request.auth != null
        && request.auth.uid == resource.data.leaderId;
      
      // --- Guild Messages Subcollection ---
      match /messages/{messageId} {
        // Only guild members can read messages
        allow read: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/guilds/$(guildId)).data.memberIds;
        
        // Only guild members can create messages
        allow create: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/guilds/$(guildId)).data.memberIds;
        
        // No one can edit or delete messages (immutable chat history)
        allow update, delete: if false;
      }

      // --- Guild Raids Subcollection ---
      match /raids/{raidId} {
        // Any authenticated user can read raid status
        allow read: if request.auth != null;
        
        // Only guild members can write to raids (leader starts it, members attack)
        allow write: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/guilds/$(guildId)).data.memberIds;
      }
    }
    
    // --- Global Leaderboard ---
    match /global_leaderboard/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (
        request.auth.uid == userId || 
        userId.matches('^bot_.*')
      );
    }

    // --- Global Chat ---
    match /global_chat/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
    }

    // --- Social Feed Posts ---
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null && (
        request.auth.uid == resource.data.userId ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'comments'])
      );
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // --- Private Messaging (Conversations) ---
    match /conversations/{convId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;
      allow write: if request.auth != null && request.auth.uid in (request.resource.data.participants || resource.data.participants);
    }

    // --- Private Messages (Chat history) ---
    match /messages/{messageId} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.receiverId);
      allow create: if request.auth != null && request.auth.uid == request.resource.data.senderId;
    }
    
    // Deny access to everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
