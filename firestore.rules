rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Users Collection ---
    // Each user can only read and write their own profile document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read/write to any subcollection under their user document
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // --- Foods Collection ---
    // This is a global health/nutrition database. 
    // - Anyone can read/search food data (public).
    // - Only authenticated users can contribute (create/update) food data.
    // - Deletion is disabled for now to prevent data loss.
    match /foods/{foodId} {
      allow read: if true;
      allow create, update: if request.auth != null;
      allow delete: if false; 
    }
    
    // Deny access to everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
